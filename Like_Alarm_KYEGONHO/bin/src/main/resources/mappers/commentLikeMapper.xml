<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yangkids.model.dao.ArticleLikeDao">

    <!-- 댓글 별 좋아요 수 -->
	<select id="findCommentLike" resultType="int">
		select count(*) from CommentLike where commentId = #{commentId} and userId = #{userId};
	</select>
	
	<!-- 댓글 좋아요 증가  -->
	<insert id="Commentlikeup">
		insert into CommentLike(commentId, userId)
		values(#{commentId}, #{userId})
	</insert>
	
	<!-- 댓글 좋아요 취소 -->
	<delete id="CommentlikeDown">
	  	delete from CommentLike where commentId = #{commentId} and userId = #{userId};
	</delete>
	
	
</mapper>